* {
  box-sizing: border-box;
}

body {
  @apply relative flex flex-col justify-center items-center w-screen p-0 m-0;
  overflow-x: hidden;
}

ul {
  @apply m-0 p-0;
}

li {
  @apply p-0;
}

h3 {
  @apply font-josefin text-5xl uppercase text-center;

  @media (max-width: 450px) {
    @apply text-3xl;
  }
}

section {
  @apply py-8;
}
